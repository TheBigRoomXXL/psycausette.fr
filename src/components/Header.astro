---
import { siteConfig } from "../site.config";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <h1><a href="/">{siteConfig.title}</a></h1>
    <div class="internal-links">
      {
        siteConfig.menuLinks.map(({ name, url }) => (
          <HeaderLink href={url}>{name}</HeaderLink>
        ))
      }
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h1 {
    margin: 0;
    padding: 0.5em;
    font-size: 2rem;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
