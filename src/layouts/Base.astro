---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    pageTitle: string;
    description?: string;
}

const { pageTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr-fr">
    <head>
        <BaseHead pageTitle={pageTitle} />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
